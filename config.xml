<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cursandoApp.android" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CursandoApp</name>
    <description>
        App cursos en Argentina
    </description>
    <author email="ezequiel.r26@gmail.com" href="">
        Ezequiel Buceta
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/res/icon.png" />
    <preference name="SplashScreen" value="screen" />
    <splash src="www/res/screen/splash.png" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icons/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/res/icons/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/res/icons/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/res/icons/android/icon-96-xhdpi.png" />
        <splash qualifier="ldpi" src="www/res/screen/android/ldpi.png" />
        <splash qualifier="mdpi" src="www/res/screen/android/mdpi.png" />
        <splash qualifier="hdpi" src="www/res/screen/android/hdpi.png" />
        <splash qualifier="xhdpi" src="www/res/screen/android/xhdpi.png" />
    </platform>
    <universal-links>
        <host name="" scheme="https" />
        <host name="cursando-54cdb.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <preference name="AndroidLaunchMode" value="singleTask" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-camera" spec="^3.0.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-universal-links-plugin" spec="^1.2.1" />
    <plugin name="cordova-plugin-fcm" spec="^2.1.2" />
    <plugin name="cordova-plugin-facebook4" spec="^1.9.1">
        <variable name="APP_ID" value="332723973797774" />
        <variable name="APP_NAME" value="Cursando" />
    </plugin>
    <plugin name="cordova-plugin-browsersync" spec="^1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
</widget>
